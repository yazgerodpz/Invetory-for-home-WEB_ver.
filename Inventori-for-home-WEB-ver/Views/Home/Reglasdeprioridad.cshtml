
@{
    ViewData["Title"] = "Reglasdeprioridad";
}


    <title>Tabla de regla de prioridad</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /*INICIO ESTILO DE BOTON*/
        .button {
        background-color: #28a745; /* Color de fondo verde */
        border: none; /* Sin bordes */
        color: white; /* Texto en blanco */
        padding: 12px 24px; /* Espaciado interior del botón */
        text-align: center; /* Centrar el texto */
        text-decoration: none; /* Sin subrayado */
        display: inline-block; /* Hace que el botón esté en línea con otros elementos */
        font-size: 16px; /* Tamaño de fuente */
        font-weight: bold; /* Negrita */
        border-radius: 8px; /* Bordes redondeados */
        transition: background-color 0.3s ease, transform 0.3s ease; /* Transiciones suaves */
        cursor: pointer; /* Cambia el cursor a una mano cuando pasa por encima */
    }

        .button:hover {
            background-color: #218838; /* Color de fondo más oscuro al pasar el mouse */
            transform: scale(1.05); /* Aumenta ligeramente el tamaño al pasar el mouse */
        }

        .button:active {
            background-color: #1e7e34; /* Color de fondo más oscuro cuando se hace clic */
            transform: scale(0.98); /* Hace el botón ligeramente más pequeño al hacer clic */
        }

        .button:disabled {
            background-color: #c3e6cb; /* Color de fondo grisáceo cuando está deshabilitado */
            cursor: not-allowed; /* Cambia el cursor a uno que indica que no se puede hacer clic */
        }

    .button2 {
        background-color: #F6B26B; /* Color de fondo verde */
        border: none; /* Sin bordes */
        color: white; /* Texto en blanco */
        padding: 12px 24px; /* Espaciado interior del botón */
        text-align: center; /* Centrar el texto */
        text-decoration: none; /* Sin subrayado */
        display: inline-block; /* Hace que el botón esté en línea con otros elementos */
        font-size: 16px; /* Tamaño de fuente */
        font-weight: bold; /* Negrita */
        border-radius: 8px; /* Bordes redondeados */
        transition: background-color 0.3s ease, transform 0.3s ease; /* Transiciones suaves */
        cursor: pointer; /* Cambia el cursor a una mano cuando pasa por encima */
    }

        .button2:hover {
            background-color: #e69138; /* Color de fondo más oscuro al pasar el mouse */
            transform: scale(1.05); /* Aumenta ligeramente el tamaño al pasar el mouse */
        }

        .button2:active {
            background-color: #dabea0; /* Color de fondo más oscuro cuando se hace clic */
            transform: scale(0.98); /* Hace el botón ligeramente más pequeño al hacer clic */
        }

        .button2:disabled {
            background-color: #e69138; /* Color de fondo grisáceo cuando está deshabilitado */
            cursor: not-allowed; /* Cambia el cursor a uno que indica que no se puede hacer clic */
        }
    /*FIN ESTILO DE BOTON*/
    </style>

<body>
    <h1>Reglas de prioridad</h1>
    <button onclick="abrirFormAñadir()" class="button">Añadir Elemento</button>
    <button onclick="abrirFormActualizarP()" class="button">Actualizar regla</button>
    <form action="@Url.Action("FormularioPrio", "Home")" method="post">
    </form>
    <br/>
    <br/>
    <table id="gridPrioridades">
        <thead>
            <tr>
                <th>ID</th>
                <th>Regla de prioridad</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</body>

